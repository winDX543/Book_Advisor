<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Book Registration Form</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
 </head>

  <body>
  <script>
      (function(d, s, id){
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) {return;}
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/messenger.Extensions.js";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'Messenger'));

    const APP_ID = 686366792150447;    
    var senderID = "";
    
    window.extAsyncInit = function() {
        MessengerExtensions.getContext(APP_ID, 
          function success(thread_context){
           senderID = thread_context.psid;
          },
          function error(err){
            console.log(err);
          }
        );        
    };

    // function register() {
    //   fetch('api post/ ....', { senderID: senderID })
    // }
  </script>
  
	<h1><%= title %></h1>

  <form id="form" method="post" action="/register_books">
  <!-- <div class="form-group">
    <label for="name">Image</label>
    <input type="text" class="form-control" id="image" name="image" placeholder="Enter image url">    
  </div> -->
  
  <div class="form-group">
    <label for="bookname">Book Name</label>
    <input type="text" class="form-control" id="bookname" name="bookname" placeholder="bookname">
  </div> 
  <br/>
  <div class="form-group">
    <label for="author">Author</label>
    <input type="text" class="form-control" id="author" name="author" placeholder="author">
  </div> 
  <br/>
  <label for="genre">Genre</label>
  <div class="form-group">
      <input type="checkbox" id="knowledge" name="knowledge" value="knowledge">
      <label for="knowledge">Knowledge</label><br>

      <input type="checkbox" id="romance" name="romance" value="romance">
      <label for="romance">Self-Motivation</label><br>

      <input type="checkbox" id="religion" name="religion" value="religion">
      <label for="religion">Religion</label><br>

      <input type="checkbox" id="history" name="history" value="history">
      <label for="history">History</label><br>

       <input type="checkbox" id="biography" name="biography" value="biography">
      <label for="biography">Biography</label><br>
  </div>
  <br/>

  <div class="form-group">
    <label for="image">Image Link</label>
    <input type="text" class="form-control" id="image" name="image" placeholder="image">
  </div> 
  <br/>

  <div class="form-group">
    <label for="bookshopname">Book Shop Name</label>
    <input type="text" class="form-control" id="bookshopname" name="bookshopname" placeholder="bookshopname">
  </div> 
  <br/>

  <div class="form-group">
    <label for="bookshopaddress">Book Shop Address</label>
    <input type="text" class="form-control" id="bookshopaddress" name="bookshopaddress" placeholder="bookshopaddress">
  </div> 
  <br/>

  <div class="form-group">
    <label for="bookshopphno">Book Shop Phone</label>
    <input type="text" class="form-control" id="bookshopphno" name="bookshopphno" placeholder="bookshopphno">
  </div> 
  <br/>

  <div class="form-group">
    <label for="link">Page Link</label>
    <input type="text" class="form-control" id="link" name="link" placeholder="link">
  </div> 
  <br/>

 <div class="form-group">
    <label for="stock">Avaliable Stock</label>
    <input type="number" class="form-control" id="stock" name="stock" placeholder="stock">
  </div> 
  <br/>


   <input type="hidden"  id="sender" name="sender" value="<%= sender_id %>">
  <input type="button" value="Submit" onclick="submit()"> 
  </form>

  <script >
    var knowledge = document.getElementById("knowledge").checked;
    var romance = document.getElementById("romance").checked;
    var religion = document.getElementById("religion").checked;
    var history = document.getElementById("history").checked;
    var biography = document.getElementById("biography").checked;
  </script>
	
  <script>
      
   
      const windowShut = () => {
        MessengerExtensions.requestCloseBrowser(function success() {
          console.log(" Wnindeow Shut success"); 
            window.location.assign("www.google.com");
        }, function error(err) {
          throw err;
        });
      }
      
      function submit() {
        const form = document.getElementById("form");
        form.submit();
        windowShut();
      }



  </script>

  </body>

</html>